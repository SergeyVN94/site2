include /input-toggle/input-toggle.pug
include /text/text.pug

mixin toggle-button(options = {})
    -
        const {
            text = "",
            checked = false,
        } = options;

    label.toggle-button
        +input-toggle(checked)
        .toggle-button__text
            +text({
                text,
                noSelect: true,
            })
