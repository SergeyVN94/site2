include ../card-container/card-container.pug
include ../room-head/room-head.pug
include ../date-range/date-range.pug
include ../receipt/receipt.pug
include ../button/button.pug
include ../dropdown-guest/dropdown-guest.pug

mixin card-book-room(options = {})
    -
        const {
            roomHead = {},
            receipt = {},
            dropdownGuest = {},
            dateRange = {},
            bookingButton = "забронировать",
        } = options;

    .card-book-room
        +card-container()
            .card-book-room__head
                +room-head(roomHead)
            .card-book-room__date-range
                +date-range(dateRange)
            .card-book-room__dropdown-guest
                +dropdown-guest(dropdownGuest)
            .card-book-room__receipt
                +receipt(receipt)
            .card-book-room__booking-button
                +button({
                    text: bookingButton,
                    theme: "default-long",
                    icon: "arrow_forward",
                })
