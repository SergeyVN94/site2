include ../card-container/card-container.pug
include ../text/text.pug
include ../input-text/input-text.pug
include ../button/button.pug

mixin card-authentication(options = {})
    -
        const {
            title = "Войти",
            formAction = "/mock-address/change-me",
            inputEmailPlaceholder = "Email",
            inputPasswordPlaceholder = "Пароль",
            btnSignIn = "войти",
            noAccount =  "Нет аккаунта на Toxin?",
            btnCreateAccount = "создать",
            btnCreateAccountHref = "./registration.html",
        } = options;

    .card-authentication
        +card-container()
            .card-authentication__head
                +text({
                    text: title,
                    theme: "h1",
                    fontName: "montserrat",
                })
            form(action=formAction, method="post", class="card-authentication__form")
                .card-authentication__email
                    +input-text({
                        placeholder: inputEmailPlaceholder,
                        type: "email",
                    })
                .card-authentication__password
                    +input-text({
                        placeholder: inputPasswordPlaceholder,
                        type: "password",
                    })
                .card-authentication__btn-auth
                    +button({
                        text: btnSignIn,
                        icon: "arrow_forward",
                        theme: "default-long",
                        type: "submit",
                    })
            .card-authentication__no-account
                +text({
                    text: noAccount,
                    color: "important-text",
                })
                +button({
                    href: btnCreateAccountHref,
                    text: btnCreateAccount,
                    theme: "light",
                })
