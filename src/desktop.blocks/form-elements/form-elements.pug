include ../text-field/text-field.pug
include ../button/button.pug
include ../dropdown-guest/dropdown-guest.pug
include ../date-range/date-range.pug
include ../dropdown-filter-date/dropdown-filter-date.pug
include ../checkbox-list/checkbox-list.pug
include ../radio-buttons/radio-buttons.pug
include ../toggle-buttons/toggle-buttons.pug
include ../like-buttons/like-buttons.pug
include ../rating-buttons/rating-buttons.pug
include ../range-slider/range-slider.pug
include ../buttons-demo/buttons-demo.pug
include ../pagination/pagination.pug
include ../dropdown-room-amenities/dropdown-room-amenities.pug
include ../expandable-checkbox-list/expandable-checkbox-list.pug
include ../rich-checkbox-buttons/rich-checkbox-buttons.pug
include ../bullet-list/bullet-list.pug
include ../room-advantages/room-advantages.pug
include ../comment/comment.pug

mixin form-elements()
    article.form-elements
        .container-content
            .form-elements__container-content
                .form-elements__row
                    .form-elements__column
                        .form-elements__item
                            +text-field({
                                head: {
                                    title: "text field",
                                    help: "default",
                                },
                                placeholder: "Email",
                                type: "email",
                            })
                        .form-elements__item
                            +text-field({
                                head: {
                                    title: "subscription text field",
                                    help: "default",
                                },
                                placeholder: "Email",
                                iconRight: "arrow_forward",
                                type: "email",
                            })
                        .form-elements__item
                            +text-field({
                                head: {
                                    title: "masked text field",
                                    help: "default",
                                },
                                placeholder: "ДД.ММ.ГГГГ",
                                mask: "%D.%M.%Y",
                            })
                        .form-elements__item
                            +dropdown-guest({
                                head: {
                                    title: "dropdown",
                                    help: "default",
                                },
                            })
                        .form-elements__item
                            +date-range({
                                headDropdownLeft: {
                                    title: "date dropdown",
                                },
                                headDropdownRight: {
                                    title: "date dropdown",
                                },
                                textDropdownLeft: "ДД.ММ.ГГГГ",
                                textDropdownRight: "ДД.ММ.ГГГГ",
                            })
                        .form-elements__item
                            +dropdown-filter-date({
                                head: {
                                    title: "filter date dropdown",
                                },
                                text: "19 авг - 23 авг",
                            })
                    .form-elements__column
                        .form-elements__item
                            +checkbox-list({
                                head: {
                                    title: "checkbox buttons",
                                },
                                items: [
                                    {text: "Можно курить"},
                                    {text: "Можно с питомцами"},
                                    {text: "Можно пригласить гостей (до 10 человек)"},
                                ]
                            })
                        .form-elements__item
                            +radio-buttons({
                                head: {
                                    title: "radio buttons",
                                },
                                group: "gender",
                                items: [
                                    {
                                        text: "Мужчина",
                                        group: "gender",
                                        checked: true
                                    },
                                    {
                                        text: "Женщина",
                                        group: "gender"
                                    },
                                ],
                            })
                        .form-elements__item
                            +toggle-buttons({
                                head: {
                                    title: "toggle",
                                },
                                items: [
                                    {
                                        text: "Получать спецпредложения",
                                        checked: true,
                                    },
                                    {
                                        text: "Получать спецпредложения",
                                    },
                                ],
                            })
                        .form-elements__item
                            +like-buttons({
                                head: {
                                    title: "like button",
                                },
                                items: [
                                    {
                                        likes: 2,
                                    },
                                    {
                                        likes: 12,
                                        checked: true,
                                    },
                                ],
                            })
                        .form-elements__item
                            +rating-buttons({
                                head: {
                                    title: "rate button",
                                },
                                items: [
                                    4,
                                    5,
                                ],
                            })
                    .form-elements__column
                        .form-elements__item
                            +range-slider({
                                range: [0, 16000],
                                start: [5000, 10000],
                                step: 1000,
                                title: "range slider",
                            })
                        .form-elements__item
                            +buttons-demo({
                                title: "buttons",
                            })
                        .form-elements__item
                            +pagination({
                                head: {
                                    title: "pagination",
                                },
                                bottomText: "1 – 12 из 100+ вариантов аренды",
                            })
                .form-elements__row
                    .form-elements__column         
                        .form-elements__item
                            +dropdown-room-amenities()
                        .form-elements__item
                            +expandable-checkbox-list({
                                title: "expandable checkbox list",
                                items: [
                                    {text: "Завтрак"},
                                    {text: "Письменный стол"},
                                    {text: "Стул для кормления"},
                                    {text: "Кроватка"},
                                    {text: "Телевизор"},
                                    {text: "Шампунь"},
                                    {text: "Телевизор"},
                                    {text: "Шампунь"},
                                ],
                            })
                    .form-elements__column
                        .form-elements__item
                            +rich-checkbox-buttons({
                                head: {
                                    title: "rich checkbox buttons",
                                },
                                items: [
                                    {
                                        text: "Широкий коридор",
                                        description: "Ширина коридоров в номере не менее 91 см.",
                                    },
                                    {
                                        text: "Помощник для инвалидов",
                                        description: "На 1 этаже вас встретит специалист  и проводит до номера.",
                                    },
                                ],
                            })                        
                    .form-elements__column
                        +bullet-list({
                            head: {
                                title: "bullet list",
                            },
                            items: [
                                "Нельзя с питомцами",
                                "Без вечеринок и мероприятий",
                                "Время прибытия — после 13:00, а выезд до 12:00",
                            ],
                        })
                .form-elements__row
                    .form-elements__column
                        +room-advantages([
                            {
                                title: "Комфорт",
                                description: "Шумопоглощающие стены",
                                icon: "insert_emoticon",
                            },
                            {
                                title: "Удобство",
                                description: "Окно в каждой из спален",
                                icon: "location_city",
                            },
                        ])
                    .form-elements__column.form-elements__comment
                        -const avatar = require("../../desktop.blocks/comment/images/user1.jpg").default;
                        +comment({
                            avatar,
                            userName: "Мурад Сарафанов",
                            publicationDate: "5 дней назад",
                            likes: 12,
                            text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
                        })
