include /social-icon/social-icon.pug

mixin social-icons(icons)
    -
        icons = icons || [
            {text: "twitter", href: "https://twitter.com"},
            {text: "facebook-square", href: "https://ru-ru.facebook.com"},
            {text: "instagram", href: "https://www.instagram.com"},
        ];

    .social-icons
        for icon in icons
            .social-icons__icon
                +social-icon(icon)
