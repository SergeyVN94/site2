mixin button(options={})
    - const {
    -   theme = 'default', 
    -   bgColor = '', 
    -   size = '', 
    -   textColor = '', 
    -   classes = [],
    -   text = '',
    -   disable = false,
    -   hidden = false,
    -   icon = '',
    -   background = '',
    -} = options;

    -const classList = [
    -   ...classes
    -];

    -if (theme !== '') classList.push(`button_theme_${theme}`);
    -if (disable) classList.push('button_disable');
    -if (textColor !== '') classList.push(`button_text-color_${textColor}`);
    -if (hidden) classList.push('button_hidden');
    -if (background !== '') classList.push(`button_background_${background}`);

    -const classListStr = classList.join(' ');

    .button(class=classListStr) #{text}
        if icon !== ''
            .button__icon #{icon}
