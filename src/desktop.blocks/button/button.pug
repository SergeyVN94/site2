mixin button(options={})
    - const {
    -   theme = 'default', 
    -   bgColor = '', 
    -   size = '', 
    -   textColor = '', 
    -   classes = [],
    -   text = '',
    -   disable = false,
    -   hidden = false,
    -   icon = '',
    -   background = '',
    -} = options;

    -if (theme !== '') classes.push(`button_theme_${theme}`);
    -if (disable) classes.push('button_disable');
    -if (textColor !== '') classes.push(`button_text-color_${textColor}`);
    -if (hidden) classes.push('button_hidden');
    -if (background !== '') classes.push(`button_background_${background}`);
    -if (size !== '') classes.push(`button_size_${size}`);

    -const classListStr = classes.join(' ');

    .button(class=classListStr) #{text}
        if icon !== ''
            .button__icon #{icon}
