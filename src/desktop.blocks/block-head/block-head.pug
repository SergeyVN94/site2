mixin block-head(options = {})
    -
        const {
            title = "",
            help = "",
            titleTheme = "",
            helpTheme = "",
        } = options;

        const classesTitle = ["block-head__title"];
        const classesHelp = ["block-head__help"];

        if (titleTheme !== "") classesTitle.push(`block-head__title_theme_${titleTheme}`);
        if (helpTheme !== "") classesHelp.push(`block-head__help_theme_${helpTheme}`);

    .block-head
        if title !== ""
            case titleTheme
                when "h2"
                    h2(class=classesTitle) #{title}
                default
                    h3(class=classesTitle) #{title}
        if help !== ""
            p(class=classesHelp) #{help}
