mixin header-footer(params={})
    .header-footer(class=params.classes)
        -const menu = [{text:'Home',current:true},{text:'About Us'},{text:'Services',expend: true},{text:'Careers'},{text:'News'},{text:'Documentation'}];
        +header({
            classes: 'header-footer__header',
            menu: menu,
            login: 'Login',
            register: 'register'
        })
        +header({
            classes: 'header-footer__header',
            menu: menu,
            user: 'Cosmin Negoita'
        })
        +footer({
            siteDescription: 'Lorem ipsum dolor sit amet consectetur adipiscing elit aliquam eget nullam pellentesque aliquam curabitur cociis.',
            navigation: {
                title: 'Navigation',
                items: [
                    'About Us',
                    'News',
                    'Support',
                    'Products'
                ]
            },
            aboutUs: {
                title: 'About Us',
                items: [
                    'Who we are',
                    'Our team',
                    'Careers',
                    'Investors'
                ]
            },
            support: {
                title: 'Support',
                items: [
                    'Documentation',
                    'Community',
                    'Get in Touch'
                ]
            },
            subscribe: {
                title: 'Subscribe to our newsletter',
                text: 'Receive our latest news and promotions in your inbox!'
            }
        })
        +copyright-bar({
            text: 'Copyright Â© 2018 Toxin UI Kit. All rights reserved.',
            classes: 'header-footer__copyright-bar'
        })
        +footer-creative()