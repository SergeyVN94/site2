mixin receipt(options = {})
    -
        const {
            total = 0,
            items = [],
        } = options;

        totalRes = `${total}₽`;

    .receipt
        for item in items
            -
                const {
                   text = "",
                   price = "",
                   icon = false,
                } = item;

                priceRes = `${price}₽`;

            .receipt__item
                .receipt__text-container
                    p.receipt__item-title #{text}
                if icon
                    .receipt__icon i
                p.receipt__price #{priceRes}
                    
        .receipt__total-sum
            p.receipt__total-sum-title Итого
            .receipt__separate-line
            p.receipt__total-sum-result #{totalRes}
