mixin like-button(options = {})
    -
        const {
            likes = 0,
            checked = false,
        } = options;

        const classes = [
            "like-button",
            "js-like-button",
        ];

        if (checked) classes.push("like-button_checked");
        
        const classesStr = classes.join(" ");

        const icon = checked ? "favorite" : "favorite_border";

    div(class=classesStr)
        .like-button__icon.js-like-button__icon #{icon}
        .like-button__counter.js-like-button__counter #{likes}
