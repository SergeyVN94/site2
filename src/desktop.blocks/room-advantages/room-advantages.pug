include ../block-head/block-head.pug
include ../room-advantage/room-advantage.pug

mixin room-advantages(options={})
    -const {
    -   head = '',
    -   items = [],
    -} = options;

    .room-advantages
        if head !== ''
            .room-advantages__head
                +block-head({
                    title: head,
                })
        .room-advantages__container
            for item in items
                .room-advantages__room-advantage
                    +room-advantage(item)
