include /dropdown-head/dropdown-head.pug
include /block-head/block-head.pug
include /calendar/calendar.pug

mixin date-range(options = {})
    -
        const {
            dropdownEntranceText = "ДД.ММ.ГГГГ",
            dropdownDepartureText = "ДД.ММ.ГГГГ",
            dropdownLeftHead = { title: "прибытие" },
            dropdownRightHead = { title: "выезд" },
        } = options;

    .date-range.js-date-range
        .date-range__dropdowns
            .date-range__dropdown-container
                if dropdownLeftHead
                    .date-range__dropdown-head
                        +block-head(dropdownLeftHead)
                .date-range__dropdown.js-date-range__dropdown(data-type="start")
                    p.date-range__dropdown-text.js-date-range__dropdown-text #{dropdownEntranceText}
                    +button({ text: "expand_more", theme: "icon" })
            .date-range__dropdown-container
                if dropdownRightHead
                    .date-range__dropdown-head
                        +block-head(dropdownRightHead)
                .date-range__dropdown.js-date-range__dropdown(data-type="end")
                    p.date-range__dropdown-text.js-date-range__dropdown-text #{dropdownDepartureText}
                    +button({ text: "expand_more", theme: "icon" })
        .date-range__container
            .date-range__calendar
                +calendar()
