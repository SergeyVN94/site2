include /block-head/block-head.pug
include /text/text.pug
include /button/button.pug

mixin pagination(options = {})
    -
        const {
            head = null,
            bottomText = "",
            buttons = [
                {
                    value: 1,
                    type: "current",
                },
                { value: 2 },
                { value: 3 },
                { value: "..." },
                { value: 15 },
                { type: "next-page" },
            ],
        } = options;

        const buttonsConfig = buttons.map((config) => {
            const {
                type = "default",
                value = "",
            } = config;

            if (type === "default") {
                return {
                    text: value,
                    theme: "round",
                    textColor: "text-secondary",
                    hoverTheme: "gradient-primary",
                }
            }

            if (type === "current") {
                return {
                    text: value,
                    theme: "round",
                    fontWeight: "bold",
                    background: "gradient-primary",
                    hoverTheme: "gradient-primary",
                }
            }

            return {
                text: "arrow_forward",
                theme: "round-icon",
                background: "gradient-success",
                hoverTheme: "gradient-success",
            }
        });

    .pagination
        if head !== null
            .pagination__head
                +block-head(head)
        .pagination__container
            .pagination__buttons
                for config in buttonsConfig
                    .pagination__nav-button
                        +button(config)

            if bottomText !== ""
                .pagination__bottom-text
                    +text({
                        text: bottomText,
                        horizontal: "middle",
                    })
