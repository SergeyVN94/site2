include ../block-head/block-head.pug
include ../text/text.pug
include ../button/button.pug

mixin pagination(options={})
    -const {
    -   head = '',
    -   bottomText = '',
    -} = options;

    .pagination
        if head !== ''
            .pagination__head
                +block-head({
                    title: head,
                })
        .pagination__container
            .pagination__buttons
                .pagination__nav-button
                    +button({
                        text: '1',
                        theme: 'round',
                    })
                .pagination__nav-button
                    +button({
                        text: '2',
                        theme: 'square',
                    })
                .pagination__nav-button
                    +button({
                        text: '3',
                        theme: 'square',
                    })
                .pagination__nav-button
                    +button({
                        text: '...',
                        theme: 'square',
                    })
                .pagination__nav-button
                    +button({
                        text: '15',
                        theme: 'square',
                    })
                .pagination__nav-button
                    +button({
                        text: 'arrow_forward',
                        theme: 'round-icon',
                        background: 'gradient-green',
                    })
            if bottomText !== ''
                .pagination__bottom-text
                    +text({
                        text: bottomText,
                        horizontal: 'middle',
                    }) 