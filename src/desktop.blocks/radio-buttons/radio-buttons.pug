include /block-head/block-head.pug
include /radio-button/radio-button.pug

mixin radio-buttons({ items, head = null })
    .radio-buttons
        if head !== null
            .radio-buttons__head
                +block-head(head)
        .radio-buttons__container
            for item in items
                .radio-buttons__item
                    +radio-button(item)
