include /block-head/block-head.pug
include /checkbox-button/checkbox-button.pug

mixin checkbox-list({ items, head, isWithRichButtons })
    .checkbox-list(class=(isWithRichButtons ? "checkbox-list_with-rich-buttons" : ""))
        if head
            .checkbox-list__head
                +block-head(head)
        ul.checkbox-list__container
            for item in items
                li.checkbox-list__item
                    +checkbox-button(item)
