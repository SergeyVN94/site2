include /block-head/block-head.pug
include /checkbox-button/checkbox-button.pug

mixin checkbox-list(options = {})
    -
        const {
            head = null,
            items = [],
        } = options;

    .checkbox-list
        if head !== null
            .checkbox-list__head
                +block-head(head)
        ul.checkbox-list__container
            for item in items
                li.checkbox-list__item
                    +checkbox-button(item)

