include ../image-slider/image-slider.pug
include ../room-head/room-head.pug
include ../rating/rating.pug
include ../text/text.pug

mixin card-room-information(options = {})
    -
        const {
            roomNumber = 0,
            roomPrice = "",
            images = [],
            luxury = false,
            stars = 0,
            comments = 0,
        } = options;

    .card-room-information
        .card-room-information__image-slider
            +image-slider(images)
        .card-room-information__body
            .card-room-information__head
                +room-head({
                    roomNumber,
                    roomPrice,
                    luxury,
                    roomNumberSize: "h2",
                })
            .card-room-information__rating-comments
                +rating(stars)
                a.card-room-information__comments(href="./room-details.html#comments", tabindex="-1")
                    +text({
                        text: comments,
                        fontWeight: "bold",
                        color: "text-secondary",
                    })
                    +text({
                        text: " Отзывов",
                        whiteSpace: "pre",
                    })
