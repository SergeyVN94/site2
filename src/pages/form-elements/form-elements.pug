extends /../template/page.pug

include /simple-header/simple-header.pug
include /text-field/text-field.pug
include /button/button.pug
include /dropdown/dropdown.pug
include /date-picker/date-picker.pug
include /rating/rating.pug
include /like-button/like-button.pug
include /range-slider/range-slider.pug
include /pagination/pagination.pug
include /expandable-checkbox-list/expandable-checkbox-list.pug
include /bullet-list/bullet-list.pug
include /room-advantages/room-advantages.pug
include /comment/comment.pug

block pageHead
  title Элементы форм
  meta(name="keywords" content="hotels, hotel search, order a room")
  meta(name="description" content="Basic site blocks")

block content
  +simple-header()
  main.form-elements
    .form-elements__container-content
      .form-elements__row
        .form-elements__column
          .form-elements__text-field
            +text-field({
              label: "text field",
              placeholder: "Email",
              type: "email",
              name: "email",
            })
          .form-elements__dropdown-guests
            +dropdown({
              label: "dropdown",
              placeholder: "Сколько гостей",
              name: "guests",
              variations: {
                adults:  ["гость", "гостя", "гостей"],
                babies: ["младенец", "младенца", "младенцев"],
              },
              counters: [
                { text: "взрослые", group: "adults", value: 0 },
                { text: "дети", group: "adults", value: 0 },
                { text: "младенцы", group: "babies", value: 0 },
              ],
              withControls: true,
            })
          .form-elements__masked-text-field
            +text-field({
              label: "masked text field",
              placeholder: "ДД.ММ.ГГГГ",
              mask: "00.00.0000",
              name: "date-of-birth",
            })
          .form-elements__date-range
            +date-picker({
              dropdownEntranceLabel: "date dropdown",
              dropdownDepartureLabel: "date dropdown",
            })
          .form-elements__filter-date-dropdown
            +date-picker({ dropdownLabel: "filter date dropdown", withSingleInput: true })
          .form-elements__subscription-text-field
            +text-field({
              label: "subscription text field",
              placeholder: "Email",
              withArrow: true,
              type: "email",
              name: "subscribe",
            })
        .form-elements__column
          .form-elements__checkbox-list
            -
              items = [
                { text: "Можно курить", name: "smoking" },
                { text: "Можно с питомцами", name: "pets", checked: true },
                { text: "Можно пригласить гостей (до 10 человек)", name: "guests", checked: true },
              ];

            p.form-elements__checkbox-list-title checkbox buttons
              ul.form-elements__checkbox-list-wrapper
                for i in items
                  li.form-elements__checkbox
                    +input-button(i)
          .form-elements__radio-buttons
            p.form-elements__radio-buttons-head radio buttons
            .form-elements__radio-buttons-container
              .form-elements__radio-button
                +input-button({
                  type: "radio",
                  text: "Мужчина",
                  value: "Мужчина",
                  name: "gender",
                  checked: true,
                })
              .form-elements__radio-button
                +input-button({
                  type: "radio",
                  text: "Женщина",
                  value: "Женщина",
                  name: "gender",
                })
          .form-elements__toggle-buttons
            p.form-elements__toggle-buttons-head toggle
            .form-elements__toggle-buttons-container
              .form-elements__toggle-button
                +input-button({
                  type: "toggle",
                  text: "Получать спецпредложения",
                  checked: true,
                  name: "special-offers1",
                })
              .form-elements__toggle-button
                +input-button({
                  type: "toggle",
                  text: "Получать спецпредложения",
                  name: "special-offers2",
                })
          .form-elements__like-buttons
            p.form-elements__like-buttons-head like button
            .form-elements__like-buttons-container
              .form-elements__like-button
                +like-button({ likes: 2 })
              .form-elements__like-button
                +like-button({ likes: 12, checked: true })
          .form-elements__rating-buttons
            p.form-elements__rating-buttons-head rate button
            .form-elements__rating-buttons-container
              .form-elements__rating
                +rating(4)
              .form-elements__rating
                +rating(5)
        .form-elements__column
          .form-elements__range-slider
            +range-slider({
              range: [0, 16000],
              start: [5000, 10000],
              step: 1000,
              title: "range slider",
              name: "price-range",
            })
          .form-elements__demo-buttons
            p.form-elements__demo-buttons-head buttons
            .form-elements__demo-buttons-container
              .form-elements__demo-buttons-row
                .form-elements__demo-button
                  +button({ text: "click me" })
                .form-elements__demo-button
                  +button({ text: "click me", theme: "light" })
              .form-elements__demo-buttons-row
                .form-elements__demo-button
                  +button({ text: "click me", theme: "textual" })
              .form-elements__demo-buttons-row
                +button({
                  text: "перейти к оплате",
                  isLong: true,
                  withArrow: true,
                  href: "/mock-address/change-me",
                })
          .form-elements__pagination
            p.form-elements__pagination-title pagination
            +pagination({ bottomText: "1 – 12 из 100+ вариантов аренды" })
      .form-elements__row
        .form-elements__column         
          .form-elements__room-amenities
            +dropdown({
              label: "dropdown",
              placeholder: "Удобства номера",
              name: "room-amenities",
              variations: {
                bedrooms: ["спальня", "спальни", "спален"],
                beds: ["кровать","кровати","кроватей"],
                bathrooms: ["ванная комната","ванные комнаты","ванныx комнат"],
              },
              counters: [
                { text: "спальни", group: "bedrooms" },
                { text: "кровати", group: "beds" },
                { text: "ванные комнаты", group: "bathrooms" },
              ],
            })
          .form-elements__expandable-checkbox-list
            +expandable-checkbox-list({
              label: "expandable checkbox list",
              items: [
                { text: "Завтрак", name: "breakfast" },
                { text: "Письменный стол", name: "desk" },
                { text: "Стул для кормления", name: "feeding-chair" },
                { text: "Кроватка", name: "crib" },
                { text: "Телевизор", name: "tv" },
                { text: "Шампунь", name: "shampoo" },
              ],
            })
        .form-elements__column
          .form-elements__item
            .form-elements__rich-checkbox-list
              -
                items = [
                  {
                    text: "Широкий коридор",
                    description: "Ширина коридоров в номере не менее 91 см.",
                    name: "wide-corridor",
                  },
                  {
                    text: "Помощник для инвалидов",
                    description: "На 1 этаже вас встретит специалист  и проводит до номера.",
                    name: "disabled-assistant",
                  },
                ];

              p.form-elements__rich-checkbox-list-title rich checkbox buttons
                ul.form-elements__rich-checkbox-list-wrapper
                  for i in items
                    li.form-elements__rich-checkbox
                      +input-button(i)                    
        .form-elements__column
          +bullet-list({
            title: "bullet list",
            items: [
              "Нельзя с питомцами",
              "Без вечеринок и мероприятий",
              "Время прибытия — после 13:00, а выезд до 12:00",
            ],
          })
      .form-elements__row
        .form-elements__column
          +room-advantages({
            items: [
              {
                title: "Комфорт",
                description: "Шумопоглощающие стены",
                icon: "insert_emoticon",
              },
              {
                title: "Удобство",
                description: "Окно в каждой из спален",
                icon: "location_city",
              },
            ],
          })
        .form-elements__column.form-elements__comment
          -const avatar = require("../../components/comment/images/user1.jpg").default;
          +comment({
            avatar,
            userName: "Мурад Сарафанов",
            publicationDate: "5 дней назад",
            likes: 12,
            text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
          })
