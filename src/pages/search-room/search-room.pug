extends /../template/landing.pug

include /dropdown-guest/dropdown-guest.pug
include /range-slider/range-slider.pug
include /checkbox-list/checkbox-list.pug
include /rich-checkbox-buttons/rich-checkbox-buttons.pug
include /dropdown-room-amenities/dropdown-room-amenities.pug
include /expandable-checkbox-list/expandable-checkbox-list.pug
include /pagination/pagination.pug
include /card-room-information/card-room-information.pug

block pageTitle
    title Search page

block main
    main.search-room
        .search-room__container-content
            aside.search-room__filters
                form.search-room__form(action="/mock-address/change-me", method="post")
                    .search-room__dropdown-date-filter
                        +dropdown({
                            head: { title: "даты пребывания в отеле" },
                            text: "19 авг - 23 авг",
                        })
                    .search-room__dropdown-guest
                        +dropdown({
                            head: { title: 'Гости' },
                            text: 'Сколько гостей',
                            variations: {
                                adults:  ["гость", "гостя", "гостей"],
                                babies: ["младенец", "младенца", "младенцев"],
                            },
                            counters: [
                                { label: "взрослые", group: "adults", value: 0 },
                                { label: "дети", group: "adults", value: 0 },
                                { label: "младенцы", group: "babies", value: 0 },
                            ],
                            useControls: true,
                        })
                    .search-room__range-slider
                        +range-slider({
                            title: "диапазон цены",
                            range: [0, 16000],
                            start: [5000, 10000],
                            bottomText: "Стоимость за сутки пребывания в номере",
                            value: "0₽ - 15 000₽",
                            step: 1000,
                        })
                    .search-room__checkbox-list
                        +checkbox-list({
                            head: { title: "Checkbox Buttons" },
                            items: [
                                {text: "Можно курить"},
                                {text: "Можно с питомцами"},
                                {text: "Можно пригласить гостей (до 10 человек)"},
                            ],
                        })
                    .search-room__rich-checkbox-buttons
                        +rich-checkbox-buttons({
                            head: { title: "доступность" },
                            items: [
                                {
                                    text: "Широкий коридор",
                                    description: "Ширина коридоров в номере не менее 91 см.",
                                },
                                {
                                    text: "Помощник для инвалидов",
                                    description: "На 1 этаже вас встретит специалист  и проводит до номера.",
                                },
                            ],
                        })    
                    .search-room__dropdown-room-amenities
                        +dropdown({
                            head: { title: 'удобства номера' },
                            text: 'Удобства номера',
                            variations: {
                                bedrooms: ["спальня", "спальни", "спален"],
                                beds: ["кровать","кровати","кроватей"],
                                bathrooms: ["ванная комната","ванные комнаты","ванныx комнат"],
                            },
                            counters: [
                                { label: "спальни", group: "bedrooms" },
                                { label: "кровати", group: "beds" },
                                { label: "ванные комнаты", group: "bathrooms" },
                            ],
                        })
                    .search-room__expandable-checkbox-list
                        +expandable-checkbox-list({
                            title: "дополнительные удобства",
                            items: [
                                {text: "Завтрак"},
                                {text: "Письменный стол"},
                                {text: "Стул для кормления"},
                                {text: "Кроватка"},
                                {text: "Телевизор"},
                                {text: "Шампунь"},
                                {text: "Телевизор"},
                                {text: "Шампунь"},
                            ],
                        })
