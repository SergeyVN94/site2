                            {text: "Завтрак"},
                            {text: "Письменный стол"},
                            {text: "Стул для кормления"},
                            {text: "Кроватка"},
                            {text: "Телевизор"},
                            {text: "Шампунь"},
                            {text: "Телевизор"},
