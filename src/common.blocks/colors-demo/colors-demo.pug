mixin colors-demo(classes)
    .colors-demo(class=classes)
        include ./__item/colors-demo__item.pug
        +colors-demo__item('#1F2041', 'Dark Shade 100%', '#1F2041')
        +colors-demo__item('rgba(31, 32, 65, 0.75)', 'Dark Shade 75%', '#1F2041')
        +colors-demo__item('rgba(31, 32, 65, 0.5)', 'Dark Shade 50%', '#1F2041')
        +colors-demo__item('rgba(31, 32, 65, 0.25)', 'Dark Shade 25%', '#1F2041')
        +colors-demo__item('rgba(31, 32, 65, 0.05)', 'Dark Shade 5%', '#1F2041')
        +colors-demo__item('#BC9CFF', 'Purple', '#BC9CFF')
        +colors-demo__item('#6FCF97', 'Green', '#6FCF97')