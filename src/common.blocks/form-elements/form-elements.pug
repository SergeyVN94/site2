.form-elements.flex-container
    include ../../lib.blocks/index.pug
    include ../logo/logo.pug
    +logo('form-elements__logo')
    .form-elements__container
        .form-elements__column.form-elements__column_w320
            +text-field({
                title:'text field', 
                placeholder:'Email', 
                help:'default',
                classes: 'form-elements__item form-elements__item_mb20'
            })
            +text-field({
                title:'text field', 
                placeholder:'This is pretty awesome', 
                help:'hover / focus', 
                classes: 'form-elements__item form-elements__item_mb20'
            })
            +dropdown({
                title: 'dropdown',
                help: 'default',
                text: 'Сколько гостей',
                classes: 'form-elements__item form-elements__item_mb20'
            })  
            +text-field({
                title:'masked text field', 
                placeholder:'ДД.ММ.ГГГГ', 
                help:'default',
                classes: 'form-elements__item form-elements__item_mb40'
            })
            .form-elements__row.form-elements__row_mb40
                +dropdown-date({
                    title: 'date dropdown',
                    text: 'ДД.ММ.ГГГГ'
                }) 
                +dropdown-date({
                    title: 'date dropdown',
                    text: '19.08.2019',
                    classes: 'form-elements__item form-elements__item_ml20'
                }) 
            .form-elements__column.form-elements__column_w266
                +dropdown({
                    title: 'filter date dropdown',
                    text: '19 авг - 23 авг',
                    classes: 'form-elements__item form-elements__item_mb40'
                })
                +text-field-subscription({
                    title: 'subscription text field',
                    placeholder: 'Email'
                })
        .form-elements__column.form-elements__column_w266
            .form-elements__section-title Checkbox Buttons
            .form-elements__column.form-elements__column_mb40
                    +checkbox({
                        classes: 'form-elements__item_sm',
                        text: 'Можно курить',
                        classes: 'form-elements__item form-elements__item_mb10'
                    })
                    +checkbox({  
                        checked: true,
                        classes: 'form-elements__item_sm',
                        text: 'Можно с питомцами',
                        classes: 'form-elements__item form-elements__item_mb10'
                    })
                    +checkbox({
                        checked: true,
                        text: 'Можно пригласить гостей',
                        help: '(до 10 человек)',
                        classes: 'form-elements__item'
                    })
            .form-elements__section-title Radio Buttons
            .form-elements__row.form-elements__row_mb40
                +radio-button({
                    text: 'Мужчина',
                    name: 'gender',
                    checked: true
                })
                +radio-button({
                    text: 'Женщина',
                    name: 'gender',
                    classes: 'form-elements__item form-elements__item_ml20'
                })
            .form-elements__section-title Toggle
            .form-elements__column.form-elements__column_mb40
                +toggle-button({
                    text: 'Получать спецпредложения',
                    checked: true,
                    classes: 'form-elements__item form-elements__item_mb14'
                })
                +toggle-button({
                    text: 'Получать спецпредложения',
                    checked: false
                })
            .form-elements__section-title like button
            .form-elements__row.form-elements__row_mb40
                +like-button({
                    likes: 2
                })
                +like-button({
                    likes: 12,
                    checked: true,
                    classes: 'form-elements__item form-elements__item_ml10'
                })
            .form-elements__section-title rate button
            .form-elements__row
                +rate-button({
                    selectStar: 4
                })
                +rate-button({
                    selectStar: 5,
                    classes: 'form-elements__item form-elements__item_ml20'
                })