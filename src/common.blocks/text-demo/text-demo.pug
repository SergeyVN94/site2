mixin text-demo(classes)
    .text-demo(class=classes)
        include ./text-demo__item/text-demo__item.pug
        +text-demo__item('H1', 'This one is the sub-section or widget title', 'text-demo__item_h1')
        +text-demo__item('H2', 'Next one is the item title inside widgets', 'text-demo__item_h2')
        +text-demo__item('H3', 'This is a label or CTA text', 'text-demo__item_h3')
        +text-demo__item('Body', 'This is the body text which is used for most of the design, like paragraphs, lists, etc.', 'text-demo__item_body')