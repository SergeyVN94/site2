mixin header(params={})
    .header(class=params.classes)
        include ../../lib.blocks/index.pug
        .container-content.header__container-content
            +logo('logo_theme_main header__logo')
            +menu({
                items: params.menu
            })
            -if(params.user) {
                .header__user.text.text_body #{params.user}
            -} else {
                .button.button_theme_default-light.button_height_smile.header__button-login login
                .button.button_theme_default.button_height_smile register
            -}