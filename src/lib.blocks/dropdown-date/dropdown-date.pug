include ../dropdown-head/dropdown-head.pug
mixin dropdown-date(params={})
    .dropdown-date(class=params.classes)
        .form-element-title #{params.title}
        if params.help
            .form-element-help #{params.help}
        +dropdown-head({
            text: params.text || 'ДД.ММ.ГГГГ',
            classes: 'dropdown-date__head'
        })
        .dropdown-date__calendar
        