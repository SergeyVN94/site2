include /logo/logo.pug

mixin colors-and-type()
  - const { colors, texts } = require('@components/colors-and-type/config.json');

  main.colors-and-type
    .colors-and-type__logo
      +logo({ isMinimality: true })
    .colors-and-type__container-content
      ul.colors-and-type__demo-colors
        for color in colors
          li.colors-and-type__color-item
            .colors-and-type__color-square(class=`colors-and-type__color-square_bg_${color.bg}`)
            .colors-and-type__color-description
              p.colors-and-type__color-name #{color.name}
              p.colors-and-type__color-value #{color.value}
      ul.colors-and-type__demo-text
        for text in texts
          li.colors-and-type__text-item(class=`colors-and-type__text-item_theme_${text.theme}`)
            p.colors-and-type__text-title #{text.title}
            p.colors-and-type__text-example #{text.example}
