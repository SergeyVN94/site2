include /button/button.pug

mixin calendar(options = {})
  -
    const {
      weekdayNames = ["Пн", "Вт", "Ср", "Чт", "Пт", "Сб", "Вс"],
      buttonClear = "очистить",
      buttonApply = "применить",
    } = options;

  .calendar.js-calendar
    .calendar__date-navigation
      .calendar__change-month.calendar__change-month_direction_previous.js-calendar__change-month_direction_previous arrow_back
      h2.calendar__drawn-date.js-calendar__drawn-date
      .calendar__change-month.calendar__change-month_direction_next.js-calendar__change-month_direction_next arrow_forward
    .calendar__weekday-names
      for name in weekdayNames
        p.calendar__weekday-name #{name}
    .calendar__days-container.js-calendar__days-container
    .calendar__control-buttons
      .calendar__clear-button
        +button({
          text: buttonClear,
          theme: "text",
          textColor: "text-secondary",
          dataAction: "clear",
        })
      .calendar__apply-button
        +button({ text: buttonApply, theme: "text", dataAction: "apply" })
