include ../text/text.pug

mixin dropdown-head(options={})
    -const {
    -   text = '',
    -   icon = 'expand_more',
    -} = options;

    -const textOptions = {
    -   text,
    -   wspace: 'nowrap',
    -   noSelect: true,
    -   verticalMiddle: true,
    -};

    .dropdown-head.js-dropdown-head
        .dropdown-head__text.js-dropdown-head__text
            +text(textOptions)
        .dropdown-head__icon #{icon}
