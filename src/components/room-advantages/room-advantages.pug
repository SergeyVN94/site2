mixin room-advantages({ items, title, titleTagNumber = 3 })
  .room-advantages
    if title
      #{`h${titleTagNumber}`}.room-advantages__title #{title}
    .room-advantages__container
      for item in items
        -const { icon, title, description } = item;
        .room-advantages__list
          .room-advantages__icon #{icon}
          .room-advantages__text-container
            p.room-advantages__item-title #{title}
            p.room-advantages__item-description #{description}
