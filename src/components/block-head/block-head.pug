include ../text/text.pug

mixin block-head(options={})
    -const {
    -   title = '',
    -   titleOptions = {
    -       theme: 'h3',
    -       uppercase: true,    
    -   },
    -   help = '',
    -   helpOptions = {
    -       theme: 'h3',
    -       color: 'dark-50',
    -       fweight: 'normal',
    -       uppercase: true, 
    -   }
    -} = options;

    -titleOptions.value = title;
    -helpOptions.value = help;

    .block-head
        .block-head__title
            +text(titleOptions)
        .block-head__help
            +text(helpOptions)
