mixin button(options={})
    - const {
    -   theme = 'default', 
    -   bgColor = '', 
    -   size = '', 
    -   textColor = '', 
    -   classes = [],
    -   text = '',
    -} = options;

    -const classList = [
    -   'button',
    -   ...classes
    -];

    -if(theme !== '') classList.push(`button_theme_${theme}`);

    -const classListStr = classList.join(' ');

    div(class=classListStr) #{text}