include ../color-demo/color-demo.pug

-const colors = [
-   ['Dark Shade 100%', '#1F2041', '#1F2041'],
-   ['Dark Shade 75%', '#1F2041', 'rgba(31, 32, 65, 0.75)'],
-   ['Dark Shade 50%', '#1F2041', 'rgba(31, 32, 65, 0.5)'],
-   ['Dark Shade 25%', '#1F2041', 'rgba(31, 32, 65, 0.25)'],
-   ['Dark Shade 5%', '#1F2041', 'rgba(31, 32, 65, 0.05)'],
-   ['Purple', '#BC9CFF', '#BC9CFF'],
-   ['Green', '#6FCF97', '#6FCF97'],
-];

mixin colors-demo(classes)
    .colors-demo(class=classes)
        -colors.forEach((color) => {
            .colors-demo__color-demo
                +color-demo({
                    name: color[0],
                    color: color[1],
                    bgColor: color[2],
                })
        -});
