include ../block-head/block-head.pug
include ../bullet-list-item/bullet-list-item.pug

mixin bullet-list(options={})
    -const {
    -   head = '',
    -   items = [],
    -} = options;

    .bullet-list
        if head !== ''
            .bullet-list__head
                +block-head({
                    title: head
                })
        
        .bullet-list__container
            for text in items
                .bullet-list__item
                    +bullet-list-item({
                        text,
                    })
