mixin text-field(options = {})
  -
    const {
      label,
      withArrow,
      mask = false,
      type = "text",
      placeholder = false,
      value = false,
      name = false,
    } = options;

  
  #{label ? 'label' : 'div'}.text-field(class=(withArrow ? "text-field_with-arrow" : ""))
    if label
      span.text-field__label #{label}
    #{label ? 'span' : 'div'}.text-field__wrapper
      input.text-field__input.js-text-field__input(
        type=type,
        placeholder=placeholder,
        value=value,
        data-mask=mask,
        name=name
      )
      if withArrow
        #{label ? 'span' : 'div'}.text-field__arrow
          +button({
            text: "arrow_forward",
            theme: "icon",
            type: "submit",
            textColor: "gradient-primary",
          })
