include ../text-field/text-field.pug
include ../button/button.pug
include ../dropdown-guest/dropdown-guest.pug
include ../date-range/date-range.pug

mixin form-elements()
    .form-elements
        .form-elements__container-content
            .form-elements__row
                .form-elements__column
                    .form-elements__item
                        +text-field({
                            title: 'text field',
                            help: 'default',
                            placeholder: 'Email',
                        })
                    .form-elements__item
                        +text-field({
                            title: 'subscription text field',
                            help: 'default',
                            placeholder: 'Email',
                            iconRight: 'arrow_forward',
                        })
                    .form-elements__item
                        +text-field({
                            title: 'masked text field',
                            help: 'default',
                            placeholder: 'ДД.ММ.ГГГГ',
                            mask: '%D.%M.%Y',
                        })
                    .form-elements__item
                        +dropdown-guest()
                    .form-elements__item
                        +date-range({
                            headLeft: 'date dropdown',
                            headRight: 'date dropdown',
                            textLeft: 'ДД.ММ.ГГГГ',
                            textRight: 'ДД.ММ.ГГГГ',
                        })
            .form-elements__column
